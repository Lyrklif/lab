{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
},
  "rules": {
    "linebreak-style": 0,
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-unused-vars": "off",
    "no-undef": 0,
    "semi": ["error", "never"],
    "semi-spacing": "error",
    "no-extra-semi": "error",
    "quote-props": ["error", "as-needed"],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }]
  }
}
